# ===============
# BEAM PARAMETERS
# ===============
beam_harmonic_number = 372
beam_bunch_length = 16.6 ps # 16.6 ps, 4 ps
beam_current = 500 mA
beam_orbit_correction = on
beam_pattern = multibunch6fold # multibunch6fold, singlebunch
beam_pattern_multibunch6fold_fill = 45 # comment this line if


